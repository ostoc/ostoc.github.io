---
import IndexLayout from '../layouts/Layout.astro';
import StoryList from '../components/StoryList.astro';
import KnowledgeList from '../components/KnowledgeList.astro';
import ExperienceList from '../components/ExperienceList.astro';
---

<IndexLayout title="This is Junyu">
  <div class="hero">
    <h1>
      Hi, this is Junyu. I'm a product manager
      <s>designer and engineer</s>
      who works and lives in Berlin
      <div class="dot"><a href="/appuroved">.</a></div>
    </h1>
    <h2>
      Share stories about travel, books, design, programming also thoughts and
      learning from product development.
    </h2>
  </div>
  <div class="divider">Experience</div>
  <ExperienceList />
  <div class="divider">Knowledges</div>
  <KnowledgeList postCount="3" />
  <div class="link"><a href="/knowledges">more</a></div>
  <div class="divider">Stories</div>
  <StoryList postCount="3" />
  <div class="link"><a href="/stories">more</a></div>
</IndexLayout>

<style is:inline lang="scss">
  .hero {
    align-content: center;
    padding: 3rem 0 1rem 0;
  }
  h1,
  h2 {
    font-family: var(--font-family-serif);
    font-weight: var(--font-weight-regular);
  }

  h1 {
    letter-spacing: -0.04rem;
    font-size: var(--font-size-xxl);
    line-height: 3rem;
  }

  h2 {
    line-height: 1.6rem;
    font-size: var(--font-size-lg);
  }

  a {
    color: var(--color-text);
    text-decoration: none;
  }

  .divider {
    font-size: var(--font-size-md);
    margin: 2rem 0;
    padding: 0.8rem 0;
    font-weight: var(--font-weight-bold);
    border-bottom: 1px solid var(--color-text-tertiary);
  }
  .dot {
    line-height: 1rem;
    display: inline;
  }
  .dot:hover {
    a {
      color: var(--color-primary);
    }
    line-height: 1rem;
    font-size: 6rem;
  }
  .link {
    margin: 1rem 0 2rem 0;
    font-size: var(--font-size-sm);
    a {
      color: var(--color-text-tertiary);
    }
    a:hover {
      color: var(--color-text-secondary);
      text-decoration: underline;
    }
    text-align: right;
  }
</style>
