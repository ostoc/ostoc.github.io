---
import '../styles/style.css';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
export interface Props {
  title: string;
}
const { title, frontmatter } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <!-- <link rel="icon" type="image/svg+xml" href="/favicon.svg" /> -->
    <meta name="generator" content={Astro.generator} />
    <title>{title ? title : frontmatter.title}</title>
  </head>
  <body>
    <Navbar type="post" />
    <article>
      <div class="date">{frontmatter.date.split('T')[0]}</div>
      <slot />
    </article>
  </body>
  <Footer />
</html>

<style is:inline lang="scss">
  h1,
  h2,
  h3,
  h4 {
    padding: 0;
    margin: 0;
  }

  h1 {
    font-weight: var(--font-weight-regular);
    font-size: var(--font-size-xxl);
    margin: 1rem 0 3rem 0;
  }

  h2 {
    font-size: var(--font-size-xl);
    font-weight: var(--font-weight-bold);
    font-family: var(--font-family-sans);

    margin: 2rem 0 0.8rem 0;
  }

  h3 {
    color: var(--color-text-secondary);
    font-family: var(--font-family-sans);
    font-size: var(--font-size-lg);
    margin: 1.2rem 0 0.5rem 0;
  }

  blockquote {
    border-left: 0.3rem solid var(--color-text-secondary);
    line-height: 1.2;
    padding-left: 1.2rem;
    margin: 0;
  }
  .sr-only {
    display: none;
  }
  .footnotes::before {
    content: '';
    width: 4rem;
    height: 1rem;
    background: var(--color-text-secondary);
  }
  .footnotes {
    margin-top: 4rem;
    display: flex;
    flex-direction: column;
    word-break: break-all;
    font-size: var(--font-size-sm);
    font-family: var(--font-family-sans);
    background: var(--color-footernotes-background);
  }

  .footnotes ul,
  .footnotes ol {
    padding: 1rem 3rem;
  }
  .footnotes p {
    margin: 0;
    word-break: normal;
  }
  .footnotes a {
    color: var(--color-text);
    border-bottom: 0;
  }
  .data-footnote-backref {
    font-family: monospace, 'Apple Color Emoji';
  }
  article {
    margin: 4rem auto;
    font-family: var(--font-family-serif);
  }

  article ul,
  article ol {
    margin: 0;
    padding-left: 1.5rem;
    line-height: 1.5;
  }

  article .image-text-aside {
    display: grid;
    grid-template-columns: fit-content(20rem) 1fr;
    gap: 2rem;
    align-items: center;
    width: 50rem;
    margin-left: -10rem;
  }

  article img {
    margin: 1rem 0;
    width: 100%;
  }

  article img.aside {
    width: 100%;
  }

  article img.wide {
    width: 60rem;
    margin-left: -10rem;
  }

  article img.filter {
    filter: invert(var(--filter-invert));
  }

  article a {
    color: var(--color-text);
  }

  article sup a {
    width: 1rem;
    height: 1rem;
    text-align: center;
    display: inline-block;
    line-height: 1.2rem;
    font-size: 0.6rem;
    border-radius: 0.5rem;
    background: var(--color-primary);
    text-decoration: none;
  }

  article p {
    margin: 0.8rem 0;
    padding: 0;
    line-height: 1.4;
  }

  .date {
    font-size: var(--font-size-sm);
    color: var(--color-text-secondary);
  }

  .button {
    margin: 1rem 0;
    text-decoration: none;
    display: block;
    box-sizing: border-box;
    width: 100%;
    border: 1px solid var(--color-text);
    border-bottom: 4px solid;
    padding: 0.8rem;
    color: var(--color-text);
    font-size: medium;
    font-family: var(--font-family-sans);
  }
  .button:hover {
    background: var(--color-primary);
  }
  .button.primary {
    border: 1px solid var(--color-background);
    background: var(--color-primary);
  }
  .button--disabled {
    opacity: 0.4;
    cursor: not-allowed;
  }

  .callout {
    padding: 0.5rem 1rem;
    border: 1px solid var(--color-text);
    border-bottom: 4px solid var(--color-text-secondary);
    font-family: var(--font-family-sans);
    background: var(--color-primary);
    position: relative;
  }
  .callout::after {
    content: '';
    position: absolute;
    width: 0px;
    height: 0px;
    top: 0;
    right: 0;
    border-style: solid;
    border-width: 0 1rem 1rem 0;
    border-color: transparent var(--color-text) transparent transparent;
    transform: rotate(0deg);
  }
</style>
